<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listing</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>

    <%- include('./partials/header') %>




    <h1>Listing All</h1>

    <% if (items && items.length> 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Edit</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                <% items.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.message %>
                        </td>
                        <td>
                            <a href="/items/<%= item.id %>">View</a>
                        </td>
                        <td>
                            <form method="POST" action="/items/<%= item.id %>/delete" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <button type="submit">Delete</button>
                            </form>
                        </td>

                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <p>No items found.</p>
            <% } %>

</body>

</html>